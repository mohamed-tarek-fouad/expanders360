{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "assets": [
      { "include": "**/*.json", "outDir": "dist" }, 
      { "include": "**/*.yml", "outDir": "dist" }, 
      { "include": "locales/**/*", "outDir": "dist" } 
    ]
  }
}
